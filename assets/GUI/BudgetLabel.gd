extends Label

func _process(delta):
	self.text = str("Remaining budget : $" + str(comma_sep(Global.remaining)))

func comma_sep(number):
	var string = str(number)
	var mod = string.length() % 3
	var res = ""

	for i in range(0, string.length()):
		if i != 0 && i % 3 == mod:
			res += ","
		res += string[i]

	return res

